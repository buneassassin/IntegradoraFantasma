<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Sombra -->
        <shape android:shape="rectangle">
            <solid android:color="#A6A6A6" /> <!-- Color de la sombra -->
            <corners android:radius="8dp" /> <!-- Borde redondeado -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <!-- Fondo -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color del fondo -->
            <corners android:radius="8dp" /> <!-- Borde redondeado -->
        </shape>
    </item>
</layer-list>
